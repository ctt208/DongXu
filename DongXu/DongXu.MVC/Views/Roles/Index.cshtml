            delete1: function (id) {

                axios.post('http://localhost:8098/Role/DelteRole?id=' + id).then((response) => {


                    console.log(response.data);
                    if (response.data.length > 0) {
                        alert("删除成功!");
                        this.getList();
                    }
                },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
            updateRole: function (RoleID, RoleName, RoleDescribe) {
                var params = new URLSearchParams();
                params.append('RoleID', RoleID);
                params.append('RoleName', RoleName);
                params.append('RoleDescribe', RoleDescribe);
                axios.post('http://localhost:8098/Role/UpdateRole', params).then(
                    (Response) => {
                        if (Response.data > 0) {
                            alert("修改成功!!");
                            this.getList();
                        }
                    },
                    (Response) => {
                        alert(Response.status);
                    }
                ).catch (function (response) {
                    alert(response);
                });
            }
        },
        computed: {
            indexs: function () {
                var left = 1;
                var right = this.all;
                var ar = [];
                if (this.all >= 5) {
                    if (this.cur > 3 && this.cur < this.all - 2) {
                        left = this.cur - 2
                        right = this.cur + 2
                    } else {
                        if (this.cur <= 3) {
                            left = 1
                            right = 5
                        } else {
                            right = this.all
                            left = this.all - 4
                        }
                    }
                }
                while (left <= right) {
                    ar.push(left)
                    left++
                }
                return ar
            }

        }
    });

