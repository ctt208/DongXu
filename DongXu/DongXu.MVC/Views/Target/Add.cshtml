                success: function (data) {
                    if (data > 0) {
                        AddTarget();
                        alert("添加成功！");
                    }
                    else {
                        alert("添加失败！");
                    }
                }
            })
        }
        function AddTarget() {
            $.ajax({
                url: "http://localhost:8098/DongXu/AddTarget1",
                type: "post",
                data: $("#form2").serialize(),
                success: function (data) {
                    if (data > 0) {
                        alert("添加成功！");
