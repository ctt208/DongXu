
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/axios.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>
</head>
<body>
    <a href="http://localhost:51281/RolesMVC/Add">添加</a>
    <div id="app" class="div-td">
        <table v-show="list.length" class="table-condensed" border="1">
            <tr>
                <th>角色ID</th>
                <th>角色名称</th>
                <th>角色描述</th>
                <th>操作</th>
            </tr>
            <tr v-for="(item,index) in list">
                <td> <input type="text" v-model="item.RoleID" /></td>
                <td><input type="text" v-model="item.RoleName" /></td>
                <td><input type="text" v-model="item.RoleDescribe" /></td>
                <td>
                    <a href="#" v-on:click="delete1(item.RoleID)">删除</a>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
<script type="text/javascript">//v-bind:value="item.RoleID" v-model="item.RoleID" >{{item.RoleID}}
    ///实例化一个Vue对象
    var vm = new Vue({
        ///作用域
        el: "#app",
        data: {
            list: [],
            
        },
        ///文档就绪函数
        mounted() {
            this.getList();
        },
        methods: {
            getList: function () {
                axios.get('http://localhost:8098/Role/GetRoles').then((response) => {
                    alert(0);
                    this.list = [];
                    console.log(response.data);
                    for (var i = 0; i < response.data.length; i++) {
                        this.list.push(response.data[i]);
                    }
                },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
            delete1: function (id) {
            
                axios.post('http://localhost:8098/Role/DelteRole?id=' + id).then((response) => {
                   
                    
                    console.log(response.data);
                    if (response.data.length > 0) {
                        alert("删除成功!");
                        this.getList();
                    }
                },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
        },
    });
   
</script>