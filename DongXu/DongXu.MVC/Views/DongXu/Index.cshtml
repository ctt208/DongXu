
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/css/index.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/layer/2.4/layer.js"></script>
    <script src="~/echarts.js"></script>

</head>
<body>
    <div class="content goal">
        <ul>
            <li><button>我的待办</button></li>
            <li><button>我的已办</button></li>
            <li><button>我的待阅</button></li>
            <li id="more"><a href="#">More>></a></li>
            <div class="clearboth"></div>
        </ul>
        <iframe src="/DongXu/Backlog"></iframe>
    </div>
   
    <div class="content integral">
        <h4>积分排名</h4>
        @*<div class="cot"></div>*@
        <div id="main" style="width: 600px;height:400px; border:1px solid red; ">
            <script type="text/javascript">
                var Names = [];
                var Nums = [];
                // 基于准备好的dom，初始化echarts实例
                var myChart = echarts.init(document.getElementById('main'));
                $(function () {
                    loadData();
                })
                function loadData() {
                    $.ajax({
                        url: "http://localhost:8098/Integral/GetIntegral",
                        type: "get",
                        success: function (data) {
                            console.log(data);
                            for (var i = 0; i < data.length; i++) {
                                Names[i] = data[i].name;
                                Nums[i] = data[i].IntegralNum;
                            }
                            // 指定图表的配置项和数据
                            var option = {

                                title: {
                                    text: '积分排名'
                                },
                                tooltip: {},
                                legend: {
                                    data: ['积分']
                                },
                                yAxis: {},
                                xAxis: {
                                    data: Names
                                },
                               
                                series: [{
                                    name: '积分',
                                    type: 'bar',
                                    data: Nums
                                }]
                            };
                            // 使用刚指定的配置项和数据显示图表。
                            myChart.setOption(option);
                        }
                    });
                }

            </script>
        </div>

    </div>
    <div class="content ight">
        <h4>红绿灯状态</h4>
        <div class="cot"></div>
    </div>

   
    <div class="content run" >
        <h4>运行情况</h4>
        <div class="cot">
            <div id="main" style="width: 600px;height:400px; border:1px solid red; ">
                <script type="text/javascript">
                    // 基于准备好的dom，初始化echarts实例
                    var mmyChart = echarts.init(document.getElementById('main'));

                    //指定图表的配置项和数据
                    var option1 = {
                        title: {
                            text: '某站点用户访问来源',
                            //subtext: '纯属虚构',
                            x: 'center'
                        },
                        tooltip: {
                            trigger: 'item',
                            formatter: "{a} <br/>{b} : {c} ({d}%)"
                        },
                        legend: {
                            orient: 'vertical',
                            left: 'left',
                            data: ['直接访问', '邮件营销', '联盟广告', '视频广告', '搜索引擎']
                        },
                        series: [
                            {
                                name: '访问来源',
                                type: 'pie',
                                radius: '55%',
                                center: ['50%', '60%'],
                                data: [
                                    { value: 335, name: '直接访问' },
                                    { value: 310, name: '邮件营销' },
                                    { value: 234, name: '联盟广告' },
                                    { value: 135, name: '视频广告' },
                                    { value: 1548, name: '搜索引擎' }
                                ],
                                itemStyle: {
                                    emphasis: {
                                        shadowBlur: 10,
                                        shadowOffsetX: 0,
                                        shadowColor: 'rgba(0, 0, 0, 0.5)'
                                    }
                                }
                            }
                        ]
                    };

                    // 使用刚指定的配置项和数据显示图表。
                    mmyChart.setOption(option1);
                </script>

            </div>
        </div>
       
        </div>
        <div class="content percentage">
            <h4>目标完成率</h4>
            <div class="cot"></div>
        </div>
        <div class="content run">
            <h4>投入产出比排名</h4>
            <div class="cot"></div>
        </div>
        <div class="content main">
            <h4>主责事项</h4>
            <div class="cot"></div>
        </div>
</body>
</html>

