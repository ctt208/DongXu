
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/css/index.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/layer/2.4/layer.js"></script>
    <script src="~/echarts.js"></script>

</head>
<body>
    <div class="content goal">
        <ul>
            <li><button>我的待办</button></li>
            <li><button>我的已办</button></li>
            <li><button>我的待阅</button></li>
            <li id="more"><a href="#">More>></a></li>
            <div class="clearboth"></div>
        </ul>
        <iframe src="/DongXu/Backlog"></iframe>
    </div>
   
    <div class="content integral">
        <h4>积分排名</h4>
        @*<div class="cot"></div>*@
        <div id="main" style="width: 600px;height:400px; border:1px solid red; ">
            <script type="text/javascript">
                var Names = [];
                var Nums = [];
                var app = {};
                option = null;
                var pieData = [];
                // 基于准备好的dom，初始化echarts实例
                var myChart = echarts.init(document.getElementById('main'));
                $(function () {
                    loadData();
                })
                function loadData() {
                    $.ajax({
                        url: "http://localhost:8098/Integral/GetIntegral",
                        type: "get",
                        success: function (data) {
                            console.log(data);
                            for (var i = 0; i < data.length; i++) {
                                Names[i] = data[i].name;
                                Nums[i] = data[i].IntegralNum;
                            }
                            // 指定图表的配置项和数据
                            var option = {

                                title: {
                                    text: '积分排名'
                                },
                                tooltip: {},
                                legend: {
                                    data: ['积分']
                                },
                                yAxis: {},
                                xAxis: {
                                    data: Names
                                },
                               
                                series: [{
                                    name: '积分',
                                    type: 'bar',
                                    data: Nums
                                }]
                            };
                            // 使用刚指定的配置项和数据显示图表。
                            myChart.setOption(option);
                        }
                    });
                    $.ajax({
                        url: "http://localhost:8098/DongXu/GetRunnings",
                        type: "get",
                        success: function (data) {
                            $(data).each(function (index, data) {
                                $("#showrunning").append("<tr><td>" + data.Name + "</td><td>" + data.Numberids + "</td><td>" + data.Per + "%</td></tr>");
                                pieData.push({ value: data.Numberids, name: data.Name });
                                console.log(pieData.length);
                            })
                            option = {
                                title: {
                                    text: '目标运行情况',
                                    x: 'center'
                                },
                                tooltip: {
                                    trigger: 'item',
                                    formatter: "{a} <br/>{b} : {c} ({d}%)"
                                },
                                legend: {
                                    orient: 'vertical',
                                    left: 'left',
                                    data: pieData.map(function (item) {
                                        return item.name;
                                    })
                                },
                                series: [
                                    {
                                        name: '目标情况',
                                        type: 'pie',
                                        radius: '55%',
                                        center: ['50%', '60%'],
                                        data: pieData,
                                        itemStyle: {
                                            emphasis: {
                                                shadowBlur: 10,
                                                shadowOffsetX: 0,
                                                shadowColor: 'rgba(0, 0, 0, 0.5)'
                                            }
                                        }
                                    }
                                ]
                            };
                            if (option && typeof option === "object") {
                                myChart.setOption(option, true);
                            }
                        }
                    })
                }

            </script>
        </div>

    </div>
    <div class="content ight">
        <h4>红绿灯状态</h4>
        <div class="cot"></div>
    </div>

   
    <div class="echart">
        <h4>运行情况</h4>
        <div>
            <div class="echart_left">
                <div id="container" style="height: 100%"></div>
                <script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/echarts/echarts.min.js"></script>
                <script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/echarts-gl/echarts-gl.min.js"></script>
                <script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/echarts-stat/ecStat.min.js"></script>
                <script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/echarts/extension/dataTool.min.js"></script>
                <script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/echarts/map/js/china.js"></script>
                <script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/echarts/map/js/world.js"></script>
                <script type="text/javascript" src="https://api.map.baidu.com/api?v=2.0&ak=ZUONbpqGBsYGXNIYHicvbAbM"></script>
                <script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/echarts/extension/bmap.min.js"></script>
                <script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/simplex.js"></script>
            </div>
            <div class="echart_right">
                <table id="showrunning" class="layui-table" style="text-align:center;">
                    <tr style="background-color:#ccc;">
                        <th>目标状态</th>
                        <th>数量</th>
                        <th>比例</th>
                    </tr>
                </table>
            </div>
            <div style="clear:both"></div>
        </div>
    </div>
       
       
        <div class="content percentage">
            <h4>目标完成率</h4>
            <div class="cot"></div>
        </div>
      
        <div class="content main">
            <h4>主责事项</h4>
            <div class="cot"></div>
        </div>
</body>
</html>

